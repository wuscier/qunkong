<metro:MetroWindow x:Class="Wx.Qunkong360.Wpf.ContentViews.CustomMessageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wx.Qunkong360.Wpf.ContentViews"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
        mc:Ignorable="d"
        Title="CustomMessageDialog" WindowStartupLocation="CenterScreen" WindowStyle="None" ResizeMode="NoResize" Height="200" Width="450" FontSize="16">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>

        <ScrollViewer>
            <TextBlock x:Name="Message" TextWrapping="Wrap" VerticalAlignment="Center" Margin="20"></TextBlock>
        </ScrollViewer>
        
        <Button x:Name="btnConfirm" Grid.Row="1" HorizontalAlignment="Right" Margin="10" Width="100" IsDefault="True" Click="btnConfirm_Click"></Button>
    </Grid>
</metro:MetroWindow>
